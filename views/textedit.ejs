<% layout('layout/boilerplate') %>
  <div class="row d-flex justify-content-center mt-5">
    <main class="card col-9" style="text-align:center;">
      <form action="/edittext/<%=text._id %>?_method=PUT " method="POST">
        <label class="mt-4" style="text-align:left;display:block;" for="title">Title:</label>
        <input type="text" name="title" id="title" style="text-align:left;display:block;width: -webkit-fill-available;"
          class="mb-4" value="<%=text.title %>" />

        <div class="text-editor">
          <label for="text" style="text-align:left;display:block;">Text:</label>
          <textarea id="text" name="text" rows="15" cols="66"><%=text.text%></textarea>

          <div class="row mb-4">
            <div class="col-md-6">
              <label class="mt-3" style="text-align:left;display:block;" for="language">Language:</label>
              <select name="language" id="language" style="text-align:left;display:block;">
                <option value="<%=text.language%>">
                  <%=text.language%>
                </option>
                <option value="English">ٍEnglish</option>
                <option value="Persian">فارسی</option>
                <option value="ُSwedish">Svenska</option>
                <option value="Mixed">mixed</option>
              </select>
            </div>
            <div class="col-md-6">
              <button style="position: relative;top: 35%;left: 40%;" type="submit" class="btn btn-success">Save
                Edit</button>
            </div>
          </div>
        </div>
      </form>
    </main>
  </div>